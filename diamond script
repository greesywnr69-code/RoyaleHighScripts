local player = game.Players.LocalPlayer
local leaderstats = player:WaitForChild("Leaderstats")
local diamonds = leaderstats:WaitForChild("Diamonds")

-- Set the desired amount of diamonds
local desiredDiamonds = 50000000  -- 50 million diamonds

-- Function to safely set diamonds
local function setDiamonds(amount)
    diamonds.Value = amount
end

-- Safely set the diamonds to the desired amount
setDiamonds(desiredDiamonds)
